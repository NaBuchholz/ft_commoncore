{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"args": ["DEBUG=1"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make",
			"args": ["clean"],
			"problemMatcher": []
		},
		{
			"label": "fclean",
			"type": "shell",
			"command": "make",
			"args": ["fclean"],
			"problemMatcher": []
		},
		{
			"label": "rebuild",
			"type": "shell",
			"command": "make",
			"args": ["re", "DEBUG=1"],
			"problemMatcher": "$gcc"
		}
	]
}